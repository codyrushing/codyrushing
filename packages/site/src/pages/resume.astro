---
<style>
	header {
		display: flex;
		justify-content: space-between;
	}

	body > section,
	header {
		margin-bottom: 2rem;
	}

	body > section:last-child {
		margin-bottom: 0;
	}

	.brief {
		@apply leading-6;
		@apply mb-3;
		@apply flex;
		@apply flex-col;
		@apply sm:block;
	}

	.brief h3 {
		@apply inline;
		@apply text-lg;
	}

	.brief h3, .brief > span {
		white-space: nowrap;
		@apply mr-3;
	}

	.brief .position {
		@apply text-gray-400;
	}

	.brief .duration {
		@apply text-xs;
	}

	.brief .duration span:last-child:before {
		content: '-';
		display: inline;
		@apply px-1;
		margin-right: 2px;
	}

	.role-details > ul {
		@apply list-disc;
		@apply pl-4;
		@apply leading-5;
	}

	.role-details > ul > li:not(:first-child){
		@apply mt-3;
	}

	.skills-list {
		@apply flex; 
		@apply gap-2; 
		@apply flex-wrap; 
		@apply items-center;
	}

	.skills-list > li {
		@apply px-3; 
		@apply py-1; 
		@apply bg-sky-800; 
		@apply rounded-md;
		@apply font-bold;
		@apply border-sky-800;
		@apply border-b-2;
		font-family: var(--font-heading);
	}

	a.icon-link {
		text-decoration: none;
	}

	a.icon-link span {
		text-decoration: underline;
		text-decoration-style: dotted;
		text-underline-position: under;
		text-underline-offset: 2px;
	}

	a.icon-link:hover span {
		text-decoration-style: solid;
	}

	nav a.icon-link span {
		text-decoration: none;
	}

	@media print {
		html,
		body {
			font-size: 12px;
			background: white;
			color: #222 !important;
		}

		.brief .position {
			color: #333 !important;
		}

		nav.topnav {
			display: none;
		}

		header {
			@apply -mt-12;
		}

		a {
			color: inherit !important;
		}

		.role-details > ul {
			@apply ml-2;
		}	

		.skills-list {
			position: flex;
			flex-wrap: row;
			@apply gap-x-6; 
		}
		.skills-list > li {
			@apply px-0;
			background: none;
			border: none;
		}
	}	
</style>
