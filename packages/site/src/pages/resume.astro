<style>
      h1 {
        font-size: 2.8rem;
      }
      h2 {
        font-size: 1.8rem;
      }
      h3 {
        font-size: 1.1rem;
      }
      h1,
      h2,
      h3 {
        font-family: 'Merriweather', serif;
        font-weight: 700;
        margin-bottom: 0.5em;
      }

      h1:first-child,
      h2:first-child,
      h3:first-child {
        margin-top: 0;
      }

      p {
        margin: 0 0 0.5rem;
      }

      ul {
        padding: 0 0 0.75rem 0;
      }

      ul:last-child {
        padding-bottom: 0;
      }

      li {
        margin-bottom: 1rem;
      }

      li:last-child {
        margin-bottom: 0;
      }

      ul ul {
        padding-left: 1.2rem;
      }

      ul ul li {
        margin-bottom: 0.25rem;
      }

      header {
        display: flex;
        justify-content: space-between;
      }

      body > section,
      header {
        margin-bottom: 2rem;
      }

      body > section:last-child {
        margin-bottom: 0;
      }

      .inline-list {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        margin: 0;
        padding: 0.5rem 0;
      }

      .inline-list > li {
        margin-bottom: 0.25rem;
      }

      .inline-list > li:before {
        content: "\2022";
        display: inline-block;
        margin: 0 0.5rem;
      }

      .inline-list > li:first-child:before {
        display: none;
      }

      .inline-list > li:first-child {
        margin-left: 0;
      }
      header .inline-list {
        justify-content: flex-end;
        border-top: 1px solid #333;
      }
      header .inline-list:first-child {
        border-top: none;
      }

      .roles {
        list-style: none;
      }

      .brief {
        display: flex;
        padding-bottom: 0.5rem;
      }

      .brief span {
        font-size: 1.1rem;
        margin-left: 1rem;
        line-height: 1.4;
      }

      .brief span:first-child {
        margin-left: 0;
      }

      .brief .company {
        font-family: 'Merriweather', serif;
        font-weight: 700;
      }

      .brief .location {
        font-style: italic;
      }

      .brief .position {

      }

      .brief .duration {
        margin-left: auto;
      }

      .brief .duration span {
        margin-left: 0;
      }

      .brief .duration span:last-child:before {
        content: '-';
        display: inline-block;
        margin: 0 0.5rem;
      }

      .references > ul {
        display: flex;
      }

      .references > ul > li {
        flex: 1;
      }

      .references li {
        list-style: none;
      }

      .references .heading {
        display: flex;
      }

      .references .heading h3 {
        margin-right: 1em;
      }

      .references .contact > li {
        list-style: circle;
      }

      @media print {
        html,
        body {
          font-size: 12px;
        }

        ul ul {
          padding-left: 1.4em;
        }

        body {
          margin: 0 auto;
        }
      }	
</style>
