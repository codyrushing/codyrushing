---
export interface Props {
	title: string;
	showAnimatedBackground?: boolean;
}

const { title, showAnimatedBackground=false } = Astro.props;

import { PI_2 } from 'pixi.js';
import AnimatedBackground from '../components/animated-background/index.astro';
---

<!DOCTYPE html>
<html class="bg-slate-800" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@500&family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet"> 		
	</head>
	<body class="bg-slate-800 text-gray-300 flex flex-col">
		<div class="content-wrapper max-w-screen-lg	mx-auto flex flex-1">
			<slot />
		</div>
		{showAnimatedBackground && <AnimatedBackground />}
	</body>
</html>
<script>
import wf from 'webfontloader';
wf.load({
	google: { 
		families: ['Inter Tight:700', 'Lora:italic,400,700']	
	}
});
</script>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-YK6XQN5P3B"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-YK6XQN5P3B');
</script>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--font-heading: 'Inter Tight', sans-serif;
		--font-body: 'Lora', serif;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}

	body {
		overscroll-behavior-y: none;
	}

	p, span, li,
	h1, h2, h3, h4, h5, h6 {
		visibility: hidden;
	}
	html.wf-active p,
	html.wf-active span,
	html.wf-active li,
	html.wf-active h1,
	html.wf-active h2,
	html.wf-active h3,
	html.wf-active h3,
	html.wf-active h4,
	html.wf-active h5,
	html.wf-active h6 {
		visibility: visible;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	body {
    font-family: var(--font-body);
		font-weight: 400;
		min-height: 100vh;
	}
	body h1, 
	body h2, 
	body h3, 
	body h4, 
	body h5, 
	body h6 {
		font-family: var(--font-heading);
		font-weight: 700;
	}
	.content-wrapper {
		position: relative;
		z-index: 1;
	}
	*:focus {
		outline: none;
	}
	main {
		margin: auto;
		@apply p-8;
	}
	body a, body a:visited {
		@apply text-sky-400;
		text-decoration: underline;
		text-decoration-style: dotted;
		text-underline-position: under;
		text-underline-offset: 2px;
		transition: all 0.2s ease-in-out;
	}
	a svg {
		text-decoration: none;
	}
	body a:hover {
		@apply text-gray-300;
		text-decoration-style: solid;
	}
</style>